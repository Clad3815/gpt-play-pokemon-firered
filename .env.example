# Benchmark mode (optional)
FIRERED_BENCHMARK=0

# Savestate backup behavior
FIRERED_SAVESTATE_BACKUP_ENABLED=1
FIRERED_SAVESTATE_BACKUP_INTERVAL_S=300
FIRERED_SAVESTATE_BACKUP_KEEP=50
FIRERED_SAVESTATE_BACKUP_DIR=backup_saves

# Screenshot output directory used by the Python bridge
FIRERED_SCREENSHOT_DIR=tmp_screenshots

# FireRed data directories
FIRERED_GAME_DATA_DIR=game_data_firered
FIRERED_MINIMAPS_DIR=minimaps

# Symbol and debug options
FIRERED_SYM_PATH=pokefirered.sym
FIRERED_BRIDGE_STRICT_SYMBOLS=0
FIRERED_BRIDGE_DEBUG_SAVE_INFO=0

# mGBA connection options
MGBA_TRANSPORT=socket
MGBA_SOCKET_HOST=127.0.0.1
MGBA_SOCKET_PORT=8888
MGBA_SOCKET_PORT_MAX=8896
MGBA_SOCKET_TIMEOUT=2.0

# HTTP fallback transport options (used when MGBA_TRANSPORT=http)
MGBA_API_URL=http://localhost:5000/core
MGBA_HTTP_TIMEOUT=15.0
MGBA_READ_RANGE_CHUNK=1024
